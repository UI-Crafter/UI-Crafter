@if (componentList != null && componentList.UIComponents.Any())
{
    <CascadingValue Value="jsonPublisher">
        <ComponentListRender UIComponents="new ObservableCollection<UIComponent>(componentList.UIComponents)" />
    </CascadingValue>
}
else
{
    <MudText Typo="Typo.body1">
        No components to display.
    </MudText>
}

@code {
    [Parameter]
    public required UIComponentList componentList { get; set; }

    [Parameter]
    public required JsonPublisher jsonPublisher { get; set; }
}
