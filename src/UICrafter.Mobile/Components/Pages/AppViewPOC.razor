            if (buttonModel != null)
            {
                buttonModel.URL = $"https://dog-api.kinduff.com/api/facts?number={apiParamModel.ParamIndex}";
            }
        }

        await Task.CompletedTask;
        StateHasChanged(); // Refresh UI
    }
