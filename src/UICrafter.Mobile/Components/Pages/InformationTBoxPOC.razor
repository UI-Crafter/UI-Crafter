<MudTextField @bind-Value="TextBoxValue" Label="Enter Text" Variant="Variant.Filled" />

@code {
    [Parameter] public string TextBoxValue { get; set; } = "Default Text";
    [Parameter] public EventCallback<string> TextChanged { get; set; }

    private async Task HandleTextChanged(string value)
    {
        TextBoxValue = value;
        if (TextChanged.HasDelegate)
        {
            await TextChanged.InvokeAsync(value);
        }
    }
}
