
<MudButton @onclick="() => HandleClick(ButtonText)" Variant="Variant.Filled" Color="@ButtonColor" Disabled="@IsDisabled">
    @ButtonText
</MudButton>

@code {
    // Parameters to customize the button text and color
    [Parameter] public string ButtonText { get; set; } = "Click Me";
    [Parameter] public Color ButtonColor { get; set; } = Color.Primary;

    // Optionally disable the button
    [Parameter] public bool IsDisabled { get; set; } = false;

    // EventCallback for handling the click event with a string parameter
    [Parameter] public EventCallback<string> OnClick { get; set; }

    // Method to handle button click event
    private async Task HandleClick(string buttonText)
    {
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync(buttonText);
        }
    }
}
