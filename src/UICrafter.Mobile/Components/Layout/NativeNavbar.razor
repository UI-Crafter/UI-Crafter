<MudToolBar Class="justify-space-between">
    <MudIconButton Icon="@Icons.Material.Outlined.Home" Color="@GetIconColor("Home")" Class="@GetIconClass("Home")" Href="/" OnClick="@(() => SelectIcon("Home"))" />
    <MudIconButton Icon="@Icons.Material.Outlined.SendToMobile" Color="@GetIconColor("AppView")" Class="@GetIconClass("AppView")" Href="appview" OnClick="@(() => SelectIcon("AppView"))" />
    <MudIconButton Icon="@Icons.Material.Outlined.Public" Color="@GetIconColor("Public")" Class="@GetIconClass("Public")" Href="publicappview" OnClick="@(() => SelectIcon("Public"))" />
    <MudIconButton Icon="@Icons.Material.Outlined.VerifiedUser" Color="@GetIconColor("Profile")" Class="@GetIconClass("Profile")" Href="authpage" OnClick="@(() => SelectIcon("Profile"))" />
</MudToolBar>

@code {
    private string? selectedIcon;

    private void SelectIcon(string iconName)
    {
        selectedIcon = iconName;
    }

    private Color GetIconColor(string iconName)
    {
        return selectedIcon == iconName ? Color.Primary : Color.Inherit;
    }

    private string GetIconClass(string iconName)
    {
        return selectedIcon == iconName ? "selected-icon-background" : string.Empty;
    }
}
