@using UICrafter.Core.Components.Render

@if (UIComponents is not null && UIComponents.Any())
{
    <ComponentListRender UIComponents="UIComponents" />
}
else
{
    <MudText Typo="Typo.body1">
        No components to display.
    </MudText>
}

@code {
    [Parameter]
    public required ObservableCollection<UIComponent> UIComponents { get; set; }
}
