<MudTextField T="string"
              Class="mb-2"
              Variant="Variant.Outlined"
              Label="@Label"
              @bind-Value="@Value"
              @onfocus="OnFocus"
              TextChanged="OnChange" />

@code {
    protected string Label { get; set; } = string.Empty;
    protected string Value { get; set; } = string.Empty;
    protected string LogicalName { get; set; } = string.Empty;
    protected EventCallback<FocusEventArgs> OnFocus { get; set; }
    protected virtual void OnChange() { }
    public string GetValue() => Value;
}
