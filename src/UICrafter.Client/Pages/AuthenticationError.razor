@page "/auth/errorpage"
@using System.Text

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h2">
        Authentication Error:
    </MudText>
    <MudText Style="white-space: pre-wrap; font-size: 1rem;">
        @ErrorDetailsFormated
    </MudText>
</MudContainer>

@code {
    [SupplyParameterFromQuery] public string ErrorDetails { get; set; } = string.Empty;

    private string ErrorDetailsFormated => Encoding.UTF8.GetString(Convert.FromBase64String(ErrorDetails));
}
