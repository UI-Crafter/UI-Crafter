@inherits BaseLoadMetaDataList

@{
    base.BuildRenderTree(__builder);
}

@code {
    [Parameter]
    public EventCallback<long> ClickFunction { get; set; }

    [Parameter]
    public bool Public { get; set; }

    protected override void HandleClick(AppView view) => ClickFunction.TryInvokeAsync(view.Id);

    protected override void OnInitialized()
    {
        LoadPublic = Public;
    }
}
